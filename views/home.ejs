<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
        <!--Card flip from https://codepen.io/IamManchanda/pen/zoaWdW-->
        <link rel="stylesheet" href="/public/css/home.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <script defer src="https://use.fontawesome.com/releases/v5.0.10/js/all.js" integrity="sha384-slN8GvtUJGnv6ca26v8EzVaR9DC58QEwsIk9q1QXdCU8Yu8ck/tL/5szYlBbqmS+" crossorigin="anonymous"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Home</title>
    </head>
    <body>
        <% include ./includes/header.ejs %>
        <script>document.querySelector(".card-flip").classList.toggle("flip");</script>
        <% if (locals.shows) { %>
            <div class="d-flex flex-wrap justify-content-center all-shows">
                <% shows.forEach(show => { %>
                    <% if (show.provider == 'Netflix') { %>
                        <div class="card-flip">
                            <div class="flip">
                                <div class="front">
                                    <img class="card" src="<%=show.picture_link%>">
                                </div>
                                <div class="back">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5><%=show.title%></h5>
                                            <div style="float: right;">
                                                <!--Insert form here-->
                                                <i class="fas fa-star 2x"></i>
                                            </div>
                                        </div>
                                        <div class="card-body text-center">
                                            <a href="https://netflix.com/<%=show.watch_link%>"><img src="/public/assets/netflix_logo.png" class="netflix-logo-sm"></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    <% if (show.provider == 'HBO') { %>
                        <div class="card-flip">
                            <div class="flip">
                                <div class="front">
                                    <div class="card">
                                        <h5 class="card-header"><%=show.title%></h5> 
                                        <img class="card-img-bottom" src="/public/assets/hbo_splash.jpg" alt="Card image">
                                    </div>
                                </div>
                                <div class="back">
                                    <div class="card">
                                        <h5 class="card-header"><%=show.title%></h5>
                                        <div class="card-body text-center">
                                                <a href="<%=show.watch_link%>"><img src="/public/assets/hbo_logo.png" class="hbo-logo-sm"></a>                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>                  
                    <% } %>
                    <% if (show.provider == 'Hulu') { %>
                        <div class="card-flip">
                            <div class="flip">
                                <div class="front">
                                    <img class="card" src="<%=show.picture_link%>">
                                </div>
                                <div class="back">
                                    <div class="card">
                                        <h5 class="card-header"><%=show.title%></h5>
                                        <div class="card-body text-center">
                                                <a href="<%=show.watch_link%>"><img src="/public/assets/hulu_logo.png" class="hulu-logo-sm"></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>                  
                    <% } %>
                    <% if (show.provider == 'AmazonVideo') { %>
                        <div class="card-flip">
                            <div class="flip">
                                <div class="front">
                                    <img class="card" src="<%=show.picture_link%>">
                                </div>
                                <div class="back">
                                    <div class="card">
                                        <h5 class="card-header"><%=show.title%></h5>
                                        <div class="card-body text-center">
                                                <a href="<%=show.watch_link%>"><img src="/public/assets/amazon_logo.png" class="amazon-logo-sm"></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>                  
                    <% } %>
                <% }) %>
            </div>
        <% } %>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
    </body>
</html>